<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:local="clr-namespace:PagnisTokens"
             xmlns:util="clr-namespace:PagnisTokens.Utilities"
             x:Class="PagnisTokens.Views.MainPage">

	<AbsoluteLayout
		x:Name="AbsoluteRoot">
		<StackLayout
			AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1"
			AbsoluteLayout.LayoutFlags="All">
			<Image
				Source="{util:ImageResource PagnisTokens.Images.PagnisToken.png}"
				HeightRequest="100"
				WidthRequest="100"
				HorizontalOptions="CenterAndExpand"
				VerticalOptions="EndAndExpand"/>

			<Label
				Text="100,000"
				TextColor="Black"
				HorizontalOptions="CenterAndExpand"
				VerticalOptions="StartAndExpand"
				FontSize="40"/>

			<Frame
				Margin="50,0,50,0"
				CornerRadius="30"
				BackgroundColor="PeachPuff">
				<Frame.GestureRecognizers>
					<TapGestureRecognizer Tapped="CopyWalletId"/>
				</Frame.GestureRecognizers>
				<Label
					x:Name="WalletIdLabel"
					TextColor="Black"
					LineBreakMode="TailTruncation"
					InputTransparent="True"/>
			</Frame>
			
			<Image
				x:Name="QrCodeImage"
				WidthRequest="150"
				HeightRequest="150"/>
		</StackLayout>
		
    </AbsoluteLayout>

</ContentPage>
